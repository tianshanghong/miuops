# Cloudflare Tunnel configuration
tunnel: {{ tunnel_id }}
credentials-file: {{ credentials_file }}

# Ingress rules
ingress:
{% for domain in domains %}
  - hostname: "{{ domain }}"
    service: https://127.0.0.1:443
    originRequest:
      noTLSVerify: true
  - hostname: "*.{{ domain }}"
    service: https://127.0.0.1:443
    originRequest:
      noTLSVerify: true
{% endfor %}
  # Catch-all rule (required)
  - service: http_status:404

# Metrics
metrics: 127.0.0.1:2000
